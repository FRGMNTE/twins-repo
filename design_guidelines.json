{
  "project_name": "gltz.de - Family Website",
  "design_philosophy": {
    "theme": "Apple-Style Minimalist",
    "core_principles": [
      "High-key lighting with deep contrast",
      "Generous whitespace (2x standard)",
      "Frosted glass materials (backdrop-blur-xl)",
      "Smooth, spring-based animations",
      "Content-first hierarchy"
    ],
    "emotional_tone": "Trustworthy, Personal, Calm, Premium"
  },
  "typography": {
    "headings": {
      "family": "Manrope, sans-serif",
      "weights": ["600", "800"],
      "tracking": "tracking-tight",
      "usage": "All section titles, hero text"
    },
    "body": {
      "family": "Inter, sans-serif",
      "weights": ["400", "500"],
      "tracking": "tracking-normal",
      "usage": "Paragraphs, UI elements, labels"
    },
    "mono": {
      "family": "JetBrains Mono, monospace",
      "usage": "Code snippets, technical data (if any)"
    }
  },
  "colors": {
    "light": {
      "background": "#F5F5F7",
      "surface": "#FFFFFF",
      "text_primary": "#1D1D1F",
      "text_secondary": "#86868B",
      "border": "#D2D2D7"
    },
    "dark": {
      "background": "#000000",
      "surface": "#1C1C1E",
      "text_primary": "#F5F5F7",
      "text_secondary": "#86868B",
      "border": "#424245"
    },
    "accents": {
      "primary": "#0071E3",
      "success": "#34C759",
      "warning": "#FF9F0A",
      "danger": "#FF3B30",
      "twins_art": "#FF375F",
      "nature": "#34C759"
    }
  },
  "layout": {
    "grid_system": "Bento Grid (Asymmetric)",
    "container_width": "max-w-7xl",
    "spacing": {
      "section_padding": "py-24 md:py-32",
      "element_gap": "gap-8 md:gap-12"
    },
    "radius": {
      "default": "rounded-2xl",
      "large": "rounded-3xl",
      "button": "rounded-full"
    }
  },
  "components": {
    "buttons": {
      "primary": "bg-primary text-primary-foreground hover:opacity-90 rounded-full px-8 py-3 font-medium transition-all active:scale-95",
      "secondary": "bg-secondary text-secondary-foreground hover:bg-secondary/80 rounded-full px-8 py-3 font-medium transition-all active:scale-95",
      "ghost": "hover:bg-accent hover:text-accent-foreground rounded-full px-6 py-2 transition-all"
    },
    "cards": {
      "style": "bg-surface/80 backdrop-blur-xl border border-white/20 shadow-[0_8px_30px_rgb(0,0,0,0.04)] hover:shadow-[0_8px_30px_rgb(0,0,0,0.08)] transition-all duration-500 hover:-translate-y-1",
      "dark_style": "dark:bg-surface/60 dark:border-white/10"
    },
    "inputs": {
      "style": "bg-surface/50 border-transparent focus:border-primary/50 focus:ring-0 rounded-xl px-4 py-3 transition-all"
    }
  },
  "assets": {
    "images": {
      "hero_background": {
        "url": "https://images.pexels.com/photos/12529917/pexels-photo-12529917.jpeg",
        "alt": "Family walking in nature, back view",
        "position": "center 40%"
      },
      "twins_section": {
        "url": "https://images.unsplash.com/photo-1767082090743-c82e651bd9d6?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1Nzh8MHwxfHNlYXJjaHwxfHxjdXRlJTIwdHdpbiUyMGJhYmllcyUyMG1pbmltYWxpc3QlMjB3aGl0ZSUyMGJhY2tncm91bmR8ZW58MHx8fHwxNzY3MTg4NzcxfDA&ixlib=rb-4.1.0&q=85",
        "alt": "Cute twin babies minimalist"
      },
      "art_section": {
        "url": "https://images.pexels.com/photos/5447092/pexels-photo-5447092.jpeg",
        "alt": "Art supplies minimalist flat lay"
      },
      "niederrhein_bg": {
        "url": "https://images.pexels.com/photos/6016498/pexels-photo-6016498.jpeg",
        "alt": "Niederrhein landscape nature"
      },
      "baby_daily": {
        "url": "https://images.unsplash.com/photo-1744424705160-c2a32b5dc4e3?crop=entropy&cs=srgb&fm=jpg&ixid=M3w3NDk1Nzh8MHwxfHNlYXJjaHw0fHxjdXRlJTIwdHdpbiUyMGJhYmllcyUyMG1pbmltYWxpc3QlMjB3aGl0ZSUyMGJhY2tncm91bmR8ZW58MHx8fHwxNzY3MTg4NzcxfDA&ixlib=rb-4.1.0&q=85",
        "alt": "Babies lying on blanket"
      }
    },
    "icons": "lucide-react"
  },
  "sections": {
    "hero": {
      "type": "Parallax",
      "content": "Welcome to the gltz.de Family",
      "subtext": "Sharing our journey, twins' art, and life in Niederrhein."
    },
    "twins_art": {
      "type": "Showcase",
      "features": ["Gallery Grid", "PayPal.me Button (No Cart)"],
      "disclaimer": "Dies ist keine Spende im steuerlichen Sinne. Es erfolgt KEINE Gegenleistung. 100% freiwillige Unterstützung für unser Familienprojekt."
    },
    "contact": {
      "type": "Form",
      "fields": ["Name (Optional)", "Email (Required)", "Topic (Dropdown)", "Message"],
      "integration": "Gmail/Sheets (Mocked for UI)"
    },
    "admin": {
      "type": "Protected",
      "auth": "Email Code Verification",
      "features": ["Dashboard", "Blog Editor"]
    }
  },
  "accessibility": {
    "contrast": "WCAG AA Compliant (4.5:1)",
    "motion": "Respect prefers-reduced-motion",
    "aria": "Full ARIA labels for interactive elements"
  },
  "universal_guidelines": [
    "Do not use gradients for text.",
    "Use 'backdrop-blur-xl' for all overlays (nav, modals, cards).",
    "Ensure all interactive elements have a hover state that lifts or brightens.",
    "Use 'data-testid' for all key interactions.",
    "Mobile-first: Stack grids to single column on mobile.",
    "Images must have 'object-cover' and proper aspect ratios."
  ]
}